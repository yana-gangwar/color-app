<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bviolet"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_below="@+id/bblue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#ee82ee"
        android:fontFamily="@font/architects_daughter"
        android:text="Violet"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/bwhite"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_below="@+id/bindigo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/bviolet"
        android:background="#ffffff"
        android:fontFamily="@font/architects_daughter"
        android:text="White"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/bindigo"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_below="@+id/bgreen"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/bblue"
        android:background="#4b0082"
        android:fontFamily="@font/architects_daughter"
        android:text="Indigo"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/bblue"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_below="@+id/bgreen"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#0000ff"
        android:fontFamily="@font/architects_daughter"
        android:text="Blue"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/bgreen"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_below="@+id/borange"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/byellow"
        android:background="#008000"
        android:fontFamily="@font/architects_daughter"
        android:text="Green"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/byellow"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_below="@+id/borange"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#ffff00"
        android:fontFamily="@font/architects_daughter"
        android:text="Yellow"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/bred"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:background="#ff0000"
        android:fontFamily="@font/architects_daughter"
        android:text="Red"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/borange"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/bred"
        android:background="#ffa500"
        android:fontFamily="@font/architects_daughter"
        android:text="Orange"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="45dp"
        android:text="Welcome To System"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ext1"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="21dp"
        android:background="#000000"
        app:srcCompat="@android:drawable/ic_lock_power_off" />

    <TextView
        android:id="@+id/venis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="11dp"
        android:text="-@ven.iis"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>